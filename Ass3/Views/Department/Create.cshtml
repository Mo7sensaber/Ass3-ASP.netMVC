@model Company.G3.dal.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create Page</h1>
<br />
<br />
<form asp-controller="Department" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label">Date Of Creation</label>
        <input asp-for="DateOfCreation" class="form-control" type="date" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
